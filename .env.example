AIRTABLE_PERSONAL_TOKEN=
# Your Airtable personal access token (create at https://airtable.com/create/tokens)

AIRTABLE_BASE_ID=
# Your Airtable base ID (find in base URL: https://airtable.com/appXXXXXXXXXXXXXX)

PORT=3000
# Server port (Railway sets this automatically, default: 3000)

BEARER_TOKEN=
# API authentication token - generate at https://generate-random.org/api-token-generator

SYNC_MODE=polling
# Sync mode: polling (scheduled refresh), webhook (real-time), or manual (API only)

CORS_ORIGINS=
# Comma-separated list of allowed origins for CORS (e.g., https://app.example.com,https://admin.example.com)
# If not set: allows all origins in dev mode (AUTH_DISABLED=true), blocks all in production

REFRESH_INTERVAL=86400
# How often to refresh all data in seconds (default: 86400 = 24 hours)

WEBHOOK_PUBLIC_URL=
# Your public URL for webhook callbacks (required for webhook mode, e.g., https://yourapp.up.railway.app)

WEBHOOK_AUTO_SETUP=true
# Automatically setup Airtable webhooks on startup (default: true)

FAILSAFE_REFRESH_INTERVAL=86400
# Safety net: full refresh interval even with webhooks, in seconds (default: 86400 = 24 hours)

WEBHOOK_RATE_LIMIT=30
# Minimum seconds between processing webhook requests (default: 30)

WEBHOOK_TIMESTAMP_WINDOW=300
# Maximum age of webhook timestamp in seconds (default: 300 = 5 minutes)

WEBHOOK_IDEMPOTENCY_TTL=86400
# How long to track webhook IDs to prevent duplicates, in seconds (default: 86400 = 24 hours)

SQLITE_V1_PATH=data/airboost-v1.sqlite
# Path to primary SQLite database file (default: data/airboost-v1.sqlite)

SQLITE_V2_PATH=data/airboost-v2.sqlite
# Path to secondary SQLite database file for atomic updates (default: data/airboost-v2.sqlite)

SQLITE_METADATA_PATH=data/metadata.sqlite
# Path to metadata tracking database (default: data/metadata.sqlite)

ENABLE_ATTACHMENT_DOWNLOAD=true
# Download and cache Airtable attachments locally (default: true)

STORAGE_PATH=./data/attachments
# Local directory for storing attachment files (default: ./data/attachments)

API_DEFAULT_LIMIT=200
# Default number of records to return per API request (default: 200)

CONSOLA_LEVEL=3
# Console log level: 0=silent, 1=fatal, 2=error, 3=warn, 4=log, 5=info, 6=debug (default: 3)

CONSOLA_FANCY=true
# Enable colored console output for better readability (default: true)

ENABLE_DOCS=false
# Expose the Swagger /docs UI (default: false in production, always true in development via NODE_ENV)
# Set ENABLE_DOCS=true to explicitly enable docs regardless of NODE_ENV
